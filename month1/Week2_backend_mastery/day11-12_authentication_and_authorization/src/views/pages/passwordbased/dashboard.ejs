<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <!-- Card Header -->
    <div class="text-center text-xl font-semibold text-gray-800 mb-4">
        User Information
    </div>

    <!-- Card Body -->
    <div class="space-y-4">
        <div class="flex justify-between items-center">
            <span class="font-medium text-gray-600">Username:</span>
            <span class="text-gray-800"><%= username %></span>
        </div>
        
        <div class="flex justify-between items-center">
            <span class="font-medium text-gray-600">Email:</span>
            <span class="text-gray-800"><%= email %></span>
        </div>

        <div class="flex justify-between items-center">
            <span class="font-medium text-gray-600">Datetime:</span>
            <span class="text-gray-800"><%= datetime %></span>
        </div>
    </div>

    <!-- Logout Button -->
    <div class="mt-6 text-center">
        <form action="logout" method="POST">
            <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
                Log Out
            </button>
        </form>
    </div>
</div>
