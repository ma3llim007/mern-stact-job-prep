<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto mb-6 lg:py-0">
    <div
        class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <h1 class="text-2xl font-semibold text-center mb-4">Two-Factor Authentication</h1>
            <p class="text-center mb-6">Please enter the 2FA token from your authenticator app to continue.
            </p>
            <% if (message) { %>
                <div class="p-4 mb-4 text-center text-white bg-orange-600 rounded-lg font-bold">
                    <%= message %>
                </div>
                <% } %>
                    <form class="space-y-4 md:space-y-6" action="/2fa/verify-token" method="post">
                        <div>
                            <label for="token" class="block font-medium mb-2">2FA Token</label>
                            <input autocomplete="off" type="text" id="token" name="token" maxlength="6" minlength="6"
                                inputmode="numeric"
                                class="w-full px-4 py-2 border rounded-lg text-black border-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
                                placeholder="Enter your 6-digit token" required>
                        </div>

                        <button type="submit"
                            class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition">
                            Verify
                        </button>
                    </form>

                    <a href="/2fa/" class="block text-center mt-4 text-blue-600 hover:underline">
                        Back to Login
                    </a>
        </div>
    </div>
</div>