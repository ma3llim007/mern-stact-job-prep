<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    <!-- Card Header -->
    <div class="text-center text-xl font-semibold text-gray-800 mb-4">
        Enable Two-Factor Authentication
    </div>

    <!-- QR Code Section -->
    <% if (qrCodeUrl) { %>
        <div class="flex justify-center mb-4">
            <img src="<%= qrCodeUrl %>" alt="QR Code for 2FA" class="w-48 h-48 border rounded-lg shadow-md">
        </div>
        <p class="text-center text-gray-600">
            Scan this QR code using your authenticator app.
        </p>
    <% } else { %>
        <p class="text-center text-red-600">
            Error generating QR code. Please try again later.
        </p>
    <% } %>

    <!-- Back to Dashboard Button -->
    <div class="text-center mt-6">
        <a href="/2fa/dashboard" class="text-blue-500 hover:underline">
            Back to Dashboard
        </a>
    </div>
</div>
